<% content_for(:header) { "User ##{@user.id}" } %>

<table>
  <tr><td>ID:</td><td><%= @user.id %></td></tr>
  <tr><td>E-mail:</td><td><%= @user.email %></td></tr>
  <tr><td>Name:</td><td><%= @user.name %></td></tr>
  <tr><td>Role:</td><td><%= @user.role %></td></tr>
  <tr><td></td><td><%= link_to 'edit', edit_user_path(@user) %></td></tr>
  <tr><td></td><td><%= link_to 'delete', user_path(@user), method: :delete %></td></tr>
</table>
